<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <listener>
        <listener-class>org.dimchik.config.ApplicationInitializer</listener-class>
    </listener>

    <filter>
        <filter-name>authFilter</filter-name>
        <filter-class>org.dimchik.web.security.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>authFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>org.dimchik.web.servlet.auth.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>org.dimchik.web.servlet.auth.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>products</servlet-name>
        <servlet-class>org.dimchik.web.servlet.product.ProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>products</servlet-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>org.dimchik.web.servlet.product.AddProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/products/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateProduct</servlet-name>
        <servlet-class>org.dimchik.web.servlet.product.UpdateProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>updateProduct</servlet-name>
        <url-pattern>/products/update/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteProduct</servlet-name>
        <servlet-class>org.dimchik.web.servlet.product.DeleteProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteProduct</servlet-name>
        <url-pattern>/products/delete/*</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>cart</servlet-name>
        <servlet-class>org.dimchik.web.servlet.cart.CartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addCart</servlet-name>
        <servlet-class>org.dimchik.web.servlet.cart.AddCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addCart</servlet-name>
        <url-pattern>/cart/add/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteCart</servlet-name>
        <servlet-class>org.dimchik.web.servlet.cart.DeleteCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteCart</servlet-name>
        <url-pattern>/cart/delete/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cleanCart</servlet-name>
        <servlet-class>org.dimchik.web.servlet.cart.CleanCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>cleanCart</servlet-name>
        <url-pattern>/cart/clean</url-pattern>
    </servlet-mapping>

</web-app>